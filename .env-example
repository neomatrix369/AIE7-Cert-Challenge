# Environment Variables Template for Student Loan RAG System
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================

# OpenAI API Key - Required for LLM and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# Cohere API Key - Required for reranking functionality
COHERE_API_KEY=your_cohere_api_key_here

# Tavily API Key - Required for external search functionality
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# OPTIONAL MONITORING & TRACING
# =============================================================================

# LangSmith API Keys - Optional, for tracing and monitoring
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# LangChain Tracing Configuration
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=student-loan-rag

# =============================================================================
# DOCKER COMPOSE CONFIGURATION
# =============================================================================

# Project naming
COMPOSE_PROJECT_NAME=student-loan-rag

# Service Image Names (optional overrides)
QDRANT_IMAGE=qdrant/qdrant:latest
BACKEND_IMAGE_NAME=student-loan-backend
FRONTEND_IMAGE_NAME=student-loan-frontend
JUPYTER_IMAGE_NAME=student-loan-jupyter

# Container Names (optional overrides)
QDRANT_CONTAINER_NAME=student-loan-qdrant
BACKEND_CONTAINER_NAME=student-loan-backend
FRONTEND_CONTAINER_NAME=student-loan-frontend
JUPYTER_CONTAINER_NAME=student-loan-jupyter

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Backend Configuration
LOG_LEVEL=INFO

# Jupyter Configuration
JUPYTER_TOKEN=

# Frontend Configuration
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_DEPLOYMENT_ENV=docker

# =============================================================================
# DATA & STORAGE PATHS
# =============================================================================

# Data folder paths (for non-Docker usage)
DATA_FOLDER=data/
CACHE_FOLDER=cache/

# Qdrant Configuration
QDRANT_URL=:memory:
# Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key - Required for LLM and embeddings
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith API Keys - Optional, for tracing and monitoring
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Tavily API Key - Required for external search functionality
TAVILY_API_KEY=your_tavily_api_key_here

# Cohere API Key - Required for reranking functionality
COHERE_API_KEY=your_cohere_api_key_here

# LangChain Tracing Configuration
LANGCHAIN_TRACING_V2="true"
LANGCHAIN_PROJECT="AIE7 - Certification Challenge (backend)"

# Data folder path
DATA_FOLDER="/app/data"
CACHE_FOLDER="/app/cache"